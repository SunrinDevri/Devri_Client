<common:BindablePage
    xmlns:local="using:Devri"
    x:Class="Devri.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:Devri.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBlock Text="{x:Bind DisplayTemperature, Mode=OneWay}" FontSize="50"/>
            <TextBlock Text="{x:Bind DisplayHumidity, Mode=OneWay}" FontSize="50"/>

        </StackPanel>
        <Image HorizontalAlignment="Left" Height="1500.924" Margin="243.963,-243.773,0,-254.151" VerticalAlignment="Top" Width="1000.00" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Source="Resources/devri_normal.gif">
            <Image.RenderTransform>
                <CompositeTransform Rotation="90.00"/>
            </Image.RenderTransform>
        </Image>

    </Grid>
</common:BindablePage>
